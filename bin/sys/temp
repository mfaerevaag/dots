#!/bin/env bash
# sys info - temp

# readonly PREFIX="T: "
readonly PREFIX=""

main() {
    local temp=$(sensors | awk '/Physical id/ { print $4 }')
    local s
    s=${temp:1}
    s=${s%????}
    local c

    if (( $s > 80 )); then
        c=$RED
    elif (( $s > 60 )); then
        c=$YEL
    fi

    echo -e "${s}Â°C"
    echo -e "${c}"
}
