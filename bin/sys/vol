#!/bin/env sh
# sys info - vol

readonly PREFIX="â™ª: "

main() {
    local info=$(amixer get Master)
    local level=$(echo ${info} | tail -1 | sed 's/.*\[\([0-9]*%\)\].*/\1/')
    local state=$(echo ${info} | tail -1 | sed 's/.*\[\(on\|off\)\].*/\1/')

    local s
    local c
    if [[ "$state" == "off" ]]; then
        s="-"
        c=$YEL
    else
        s="${level}"
    fi

    echo -e "${s}"
    echo -e "${c}"
}
