#!/bin/env bash
# sys info - wifi

# readonly PREFIX="âš¶: "
readonly PREFIX=""

main() {
    local iw=$(iwconfig)
    local regex='ESSID:"(.+)".*Quality=(.*)\/'
    [[ $iw =~ $regex ]]

    local essid="${BASH_REMATCH[1]}"
    local qual="${BASH_REMATCH[2]}"

    local s
    local c

    if [[ $essid == "" ]]; then
        s="-"
        c=$RED
    else
        s="${essid} ${qual}"
        c=$GRE
    fi

    echo -e "${s}"
    echo -e "${c}"
}
