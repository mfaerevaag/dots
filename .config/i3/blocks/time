#!/usr/bin/bash

main() {
    # collect
    local value="$(date '+%H:%M:%S')"

    # format
    local prefix="<span font='FontAwesome'>\uf017</span> "
    # local prefix="üïê "
    # local prefix="‚ßñ "

    FG=$BLA
    BG=$BLU

    # draw
    local before="<span color='${BG}' bgcolor='${BLA}'>ÓÇ≤</span>"
    local after="<span color='${BLA}' bgcolor='${BG}'>ÓÇ≤</span>"

    local text="<span color='${FG}' bgcolor='${BG}'> ${prefix}${value} </span>"

    echo -e "${before}${text}${after}"
}
