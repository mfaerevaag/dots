# .dotfile
# i3/config

# keys
set $mod Mod4
set $modAlt Mod1

set $left h
set $down j
set $up k
set $right l

# font
# will also be used by the bar unless a different font is set
font pango:DejaVu Sans Mono 10

# window borders
# client.focused          #000000 #00AA00 #000000 #FF0000
# client.background #ffffff
# hide title
for_window [class="^.*"] border pixel 2
new_window pixel 2

# i3-gaps
smart_gaps on
smart_borders on

# auto jump back to previous workspace
workspace_auto_back_and_forth yes

# use Mouse+$mod to drag floating windows around
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvt
# start dmenu
bindsym $mod+x exec dmenu_run
# lock
bindsym --release $mod+Shift+o exec i3lock.sh
# volume
bindsym $mod+period exec "amixer -q sset Master 8+"
bindsym $mod+comma exec "amixer -q sset Master 8-"
bindsym $mod+m exec "amixer -D pulse set Master 1+ toggle"


# kill focused window
bindsym $mod+Shift+w kill
# reload the configuration file
bindsym $mod+Shift+e reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Exit' 'i3-msg exit'"

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# split in horizontal orientation
bindsym $mod+c split h
# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
#bindsym $mod+d focus child

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# switch to workspace
bindsym $mod+1 workspace 1:일
bindsym $mod+2 workspace 2:이
bindsym $mod+3 workspace 3:삼
bindsym $mod+4 workspace 4:사
bindsym $mod+5 workspace 5:오
bindsym $mod+6 workspace 6:육
bindsym $mod+7 workspace 7:칠
bindsym $mod+8 workspace 8:팔
bindsym $mod+9 workspace 9:구
bindsym $mod+0 workspace 10:십

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1:일
bindsym $mod+Shift+2 move container to workspace 2:이
bindsym $mod+Shift+3 move container to workspace 3:삼
bindsym $mod+Shift+4 move container to workspace 4:사
bindsym $mod+Shift+5 move container to workspace 5:오
bindsym $mod+Shift+6 move container to workspace 6:육
bindsym $mod+Shift+7 move container to workspace 7:칠
bindsym $mod+Shift+8 move container to workspace 8:팔
bindsym $mod+Shift+9 move container to workspace 9:구
bindsym $mod+Shift+0 move container to workspace 10:십

# move workspaces
bindsym $mod+Shift+Ctrl+$left move workspace to output left
bindsym $mod+Shift+Ctrl+$down move workspace to output down
bindsym $mod+Shift+Ctrl+$up move workspace to output up
bindsym $mod+Shift+Ctrl+$right move workspace to output right

# resize window
mode "resize" {
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# status bar
bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf

    strip_workspace_numbers yes
    # font pango:DejaVu Sans Mono 10
    font pango:DejaVu Sans Mono for Powerline 10

    # position top
    height 20
    colors {
        background #222222
        focused_workspace  #4c7899 #5283d7 #ffffff
    }
}
